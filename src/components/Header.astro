---
import { SITE_TITLE } from '../consts';
import LeftSidebar from './LeftSidebar.astro';
import ThemeIcon from './ThemeIcon.astro';
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar';
const currentPage = Astro.url.pathname;
---

<header class="my-5 flex flex-col items-center justify-between md:flex-row pegado">
	<Astronav>
		<div class="flex w-full items-center justify-between lg:w-auto">
			<h2><a href="/">{SITE_TITLE}</a></h2>
			<div class="block md:hidden">
				<MenuIcon class="h-4 w-4 text-black dark:text-white" />
			</div>
		</div>
		<MenuItems class="mt-2 hidden w-full md:mt-0 md:flex md:w-auto">
			<ul class="flex flex-col md:flex-row md:gap-3">
				<li class="md:hidden">
					<LeftSidebar currentPage={currentPage}/>
				</li>
				<li>
					<div class="social-links">
						<a href="https://www.portafolio.aprendiendodesarrollo.com/es" target="_blank" class="hover:text-orange">
							<span class="sr-only">Portafolio</span>
							<svg viewBox="0 0 20 20" aria-hidden="true" width="32" height="32" astro-icon="social/portfolio"
								><path
									fill="currentColor"
									d="M9 12H1v6a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-6h-8v2H9zm0-1H0V5c0-1.1.9-2 2-2h4V2a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v1h4a2 2 0 0 1 2 2v6h-9V9H9zm3-8V2H8v1z"
								></path></svg
							>
						</a>
						<a href="https://www.linkedin.com/in/blesy-angulo/" target="_blank" class="hover:text-orange">
							<span class="sr-only">Perfil Github</span>
							<svg viewBox="0 0 22 22" aria-hidden="true" width="32" height="32" astro-icon="social/linkedin"
								><path
									fill="currentColor"
									d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
								></path></svg
							>
						</a>
						<a href="https://twitter.com/blesyac" target="_blank" class="hover:text-orange">
							<span class="sr-only">Follow Astro on Twitter</span>
							<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
								><path
									fill="currentColor"
									d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
								></path></svg
							>
						</a>
						<a href="https://github.com/blesy" target="_blank" class="hover:text-orange">
							<span class="sr-only">Go to Astro's GitHub repo</span>
							<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
								><path
									fill="currentColor"
									d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
								></path></svg
							>
						</a>
					</div>
				</li>	
				<li>
					<ThemeIcon />
				</li>
			</ul>
		</MenuItems>
	</Astronav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 767px) {
		.social-links {
			display: none;
		}
	}
	@media (max-width: 767px) {
		.pegado {
			width: 100%;
			position: fixed;
			background-color: inherit;
		}
	}
</style>
